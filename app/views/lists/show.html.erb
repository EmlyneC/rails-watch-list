<h1> <%= @list.name %> </h1>

<% @list.movies.each do |movie| %>
  <h3> <%= movie.title %> </h3>
  <p> <%= movie.rating %> </p>
  <p> <%= movie.overview %> </p>
  <%= image_tag(movie.poster_url) %>
<% end %>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
<%= link_to 'Back', lists_path %>
